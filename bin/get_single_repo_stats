#!/bin/bash
commit=`git log -1 | grep "^commit" | cut -d" " -f2 | xargs`
date=`git log -1 | grep "^Date:" | cut -d":" -f2- | xargs`
author=`git log -1 | grep "^Author:" | cut -d":" -f2- | cut -d"<" -f1 | xargs`
if [[ "$1" == "revlocked" ]] ; then
printf "%12s %20s %36s %30s %20s\n" "REVLOCKED" $REPO_PATH $commit "$date" "$author"
else
printf "%12s %20s %36s %30s %20s\n" $REPO_RREV $REPO_PATH $commit "$date" "$author"
fi
