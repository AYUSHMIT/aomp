#!/bin/bash
# 
#   get_repo_stats: show directory name, branch, last commit, date, and author
# 
# --- Start standard header ----
function getdname(){
   local __DIRN=`dirname "$1"`
   if [ "$__DIRN" = "." ] ; then
      __DIRN=$PWD;
   else
      if [ ${__DIRN:0:1} != "/" ] ; then
         if [ ${__DIRN:0:2} == ".." ] ; then
               __DIRN=`dirname $PWD`/${__DIRN:3}
         else
            if [ ${__DIRN:0:1} = "." ] ; then
               __DIRN=$PWD/${__DIRN:2}
            else
               __DIRN=$PWD/$__DIRN
            fi
         fi
      fi
   fi
   echo $__DIRN
}
thisdir=$(getdname $0)
[ ! -L "$0" ] || thisdir=$(getdname `readlink "$0"`)
. $thisdir/aomp_common_vars
# --- end standard header ----

curdir=$PWD
echo "REPO DIRECTORY: $AOMP_REPOS"
cd $AOMP_REPOS
./.bin/repo forall -g unlocked -c $PWD/aomp/bin/get_single_repo_stats | sort
./.bin/repo forall -g revlocked -c $PWD/aomp/bin/get_single_repo_stats revlocked | sort
cd $curdir
